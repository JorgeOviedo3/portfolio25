---
import { getLocale } from "astro-i18n-aut";
import Image from "astro/components/Image.astro";
import gradient from "../assets/gradient.png";
import "./Hero.scss";

const locale = getLocale(Astro.url);

const translation = {
  es: {
    charge: "DESARROLLADOR FRONTEND",
    based: "UBICADO EN MADRID",
    portfolio: "PORTAFOLIO",
  },
  en: {
    charge: "FRONTEND DEVELOPER",
    based: "BASED IN MADRID",
    portfolio: "PORTFOLIO",
  },
};

const t = translation[locale as keyof typeof translation];
---

<section class="container" id="hero">
  <div class="hero-wrapper">
    <h1>
      JORGE OVIEDO シ<br />{t.charge}<br />☼ {t.based} ☀ <br />
      {t.portfolio} 2✨25⚗
    </h1>
    <Image class="image" src={gradient} alt="gradient" />
  </div>
</section>
