const t = translation[locale] || translation.es;
---

<section class="container" id="about">
  <div class="info">
    <div class="left">
      <h2>{t.title}</h2>
      <p>
        {t.textTitle}
      </p>
    </div>
    <div class="right">
      <Image src={aboutImg} alt="About" class="about-img" />
    </div>
  </div>
  <div class="experiences">
    <h3>{t.experience.title}</h3>
    {
      t.experience.items.map((item: any) => (
        <div class="experience">
          <div class="experience-header">
            <div class="experience-header__left">
              <span>{item.year}</span>
              <h4>{item.position}</h4>
            </div>
            <div class="experience-header__right">
              <p>{item.company}</p>
            </div>
          </div>
          <div class="experience-content">
            <h5 />
            <ul>
              {item.responsibilities.map((responsibility: string) => (
                <li>
                  <p>{responsibility}</p>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
  </div>
  <div class="certifications">
    <h3>{t.certifications.title}</h3>
    {
      t.certifications.items.map((item: any) => (
        <div class="certification">
          <div class="certification__left">
            <span>{item.year}</span>
            <h4>{item.name}</h4>
          </div>
          <div class="certification__right">
            <p>{item.company}</p>
            <span>↗</span>
          </div>
        </div>
      ))
    }
  </div>
  <div class="border-bottom"></div>
</section>
