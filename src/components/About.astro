  en: {
    title: "Hello World, I'm Jorge",
    textTitle: `A full-stack developer based in Madrid. I have a passion for web development and love to
    create websites and web applications that are fast, responsive, and accessible.`,
    experience: {
      title: "Experience",
      items: [
        {
          year: "2022 ~",
          position: "Frontend Developer",
          company: "Freelance",
          responsibilities: [
            "Development of responsive websites with Mobile First Design optimized for SEO.",
            "Implementation of technologies such as TypeScript, Next.js, Tailwind and React-Redux.",
